---
interface Props {
	imgSrc?: string;
	imgAlt?: string;
	title?: string;
	description?: string;
	tags?: string;
	github?: string;
	preview?: string
	
}

const {imgSrc,imgAlt,title,description,tags,github,preview} = Astro.props;
---
<div class="w-full p-4 grid gap-4 place-items-center z-10 border-2 border-dark bg-light dark:bg-dark dark:border-light md:p-8">
	<img src={imgSrc} alt={imgAlt} class="mb-2 shadow-xl rounded dark:shadow-dark2">
	<h1 class="text-2xl text-center">{title}</h1>
	<p>{description}</p>
	<ul class="w-full mb-4 flex flex-wrap gap-x-4 gap-y-2 opacity-50">
		{tags?.split(", ").map(tag => <li>{tag}</li>)}
	</ul>

	<div class="flex flex-wrap gap-4 justify-center items-center">
		{github && 
			<a 	href={github} 
				target="_blank" 
				class="px-4 py-2 w-fit border-2 border-gray-900 flex justify-center items-center gap-2 bg-gray-400/50 text-dark hover:bg-gray-400/25 active:bg-gray-400/25 dark:border-gray-400 dark:text-light dark:hover:bg-gray-400/75 dark:active:bg-gray-400/75">
					View Code
			</a>
		}
		{preview && 
			<a 	href={preview} 
				target="_blank"
				class="px-4 py-2 w-fit whitespace-nowrap border-2 border-gray-900 gap-2 bg-gray-400/50 text-dark hover:bg-gray-400/25 active:bg-gray-400/25 dark:border-gray-400 dark:text-light dark:hover:bg-gray-400/75 dark:active:bg-gray-400/75">
					Live Preview
			</a>
		}
	</div>
</div>
